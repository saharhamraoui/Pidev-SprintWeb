<style>
 .buttonn {
            display: inline-block;
            font-weight: 400;
            color: #fff;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-color: #00695f;
            border: 1px solid white;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out,
            border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            text-decoration: none;
        }

        .buttonn:hover {
            color: #fff;
            background-color: ##00695f;
            border-color: ##00695f;
            text-decoration: none;
        }

        .inline-inputs {
            display: flex;
            align-items: center;
        }

        .inline-inputs input {
            flex: 1; /* This ensures both input fields take up equal width */
            margin-right: 10px; /* Adjust the spacing between the input fields */
        }

        .inline-inputs label {
            margin-bottom: 5px; /* Add some space below the label */
        }
</style>
{{ form_start(form) }}
    {{ form_widget(form,{'attr': {'novalidate': 'novalidate'}} )  }}
    {{ form_errors(form)}}
    <button class="buttonn">{{ button_label|default('Save') }}</button>
