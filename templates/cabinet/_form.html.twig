    <div class="card-body card-block">
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}},{'attr':{'class':'form-horizontal'}}) }}
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.nom,"Nom :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.nom) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.nom) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.adresse,"Adresse :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.adresse,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.adresse) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.adresse) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.codepostal,"Code Postal :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.codepostal,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.codepostal) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.codepostal) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.adressemail,"Adresse Mail :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.adressemail,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.adressemail) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.adressemail) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.id_medecin,"Medecin :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.id_medecin,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.id_medecin) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.id_medecin) }}</small>
                    {% endif %}
                </div>
            </div>
            

            <div align="center" class="card-footer">
                <button class="btn"><i class="zmdi zmdi-plus"></i>{{ button_label|default('Ajouter') }}</button>
                <button class="btn"><a style="color:black;" href="{{ path('app_cabinet_index') }}">Consulter Liste</a></button>
            </div>
        {{ form_end(form) }}
    </div>

