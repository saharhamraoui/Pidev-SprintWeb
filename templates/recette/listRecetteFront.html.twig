{% extends 'baseFront.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .recipe-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 50px;
        }

        .recipe-table th,
        .recipe-table td {
            padding: 15px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .recipe-name {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .item-actions {
            text-align: right;
            padding-top: 10px;
        }

        .btn-suggest-recipe {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 0.375rem 0.75rem;
            font-size: 0.75rem;
            border-radius: 0.25rem;
            transition: all 0.2s ease-in-out;
        }

        .btn-suggest-recipe:hover {
            background-color: #0056b3;
            border-color: #004999;
        }

        .btn-suggest-recipe i {
            margin-right: 0.5rem;
            font-size: 1.25rem;
            vertical-align: middle;
        }

        .btn-suggest-recipe span {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <br><br><br><br>
    <table class="recipe-table">
        <thead>
            <tr>
                <th class="recipe-name">Name</th>
                <th class="item-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for recette in recettes %}
                <tr>
                    <td class="recipe-name">{{ recette.nomrec }}</td>
                    <td class="item-actions">
                        <a href="{{ path('recette_show', {id: recette.idrec}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'view recipe'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="{{ path('app_addRecette') }}" class="btn btn-sm btn-primary btn-suggest-recipe">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'Suggest a new recipe'|trans }}
        </a>
    </div>
{% endblock %}