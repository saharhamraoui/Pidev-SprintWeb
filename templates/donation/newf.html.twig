{% extends 'baseFront.html.twig' %}
{% block body %}
<br /><br /><br /><br /><br /><br /><br /><br>
   <h1>Feeling generous ? </h1>
       <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.valeurdon, {'attr': {'class': 'form-control'}, 'id': 'Donation Value'}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.idcamp, {'attr': {'class': 'form-control'}, 'id': 'Campaign Name'}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.iddonator, {'attr': {'class': 'form-control'}, 'id': 'Donator Name'}) }}
                        </div>
                    <div class="text-center">
                            <button type="submit" class="btn btn-primary">Donate</button>
                        </div>
                        {{ form_end(form) }}
                        <br /><br />
                    </div>
                </div>
                <br /><br /><br />
                <div>
                 <a href="{{ path('app_donate_index') }}"class="btn btn-info-custom btn-sm">Back to list of campaigns</a>
            </div>
        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br>
{% endblock %}
