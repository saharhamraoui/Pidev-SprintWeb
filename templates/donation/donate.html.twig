{% extends 'baseFront.html.twig' %}

{% block body %}
<style>

.paginator-container {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}


</style>
<br /><br /><br /><br /><br /><br /><br /><br>
    <h1>Campaign List</h1>
    <table class="table">
            <tr >
                <th >Title</th>
            <th>Association Name</th>
            <th>Campaign Type</th>
            <th>Goal</th>
            <th>Total Donation</th>
            <th>Number</th>
            </tr>
        {% for campaign in campaigns %}
        <img  src="{{ asset('uploads/' ~ campaign.image) }}" alt="Campaign image" height="70%" width="100%"  vertical-align=" middle" >
            <tr>
                 <td>{{ campaign.titre }}</td>
                <td>{{ campaign.associationname }}</td>
                <td>{{ campaign.campaigntype }}</td>
                <td>{{ campaign.goal }}</td>
                <td>{{ campaign.current }}</td>
                <td>{{ campaign.number }}</td>
                <td class="text-center">
                <div class="row">
                <div class="col">
                        <a href="{{ path('app_donation_newf') }}"class="btn btn-info-custom btn-sm">Donate to this Campaign</a>
                    </div>
                </div>
            </td>
            </tr><tr><th>Description</th>
             <td>{{ campaign.description }}</td></tr>
        {% endfor %}
    </table>
  <div class="paginator-container">
    {{ knp_pagination_render(campaigns) }}</div>
{% endblock %}
